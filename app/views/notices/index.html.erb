
<br><br><br>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3 class="text-center">通知公告</h3>
      <hr>
    </div>
    <% @notices.each do |notice| %>
      <div class="col-xs-12 col-md-6 text">
          <div class="text-left">
            <li><%= link_to(notice.title, notice_path(notice)) %>(<%= notice.created_at.to_s %>)</li>
          </div>
      </div>
    <% end %>

    <div class="col-md-12 text-center back-index">
      <a href="/" style="font-size: 1.5em;"><i class="fa fa-hand-o-left fa-1x"></i>回到首页</a>
    </div>
  </div>
</div>
