<div class="account-box">

  <h3 class="text-center">我点赞的动态信息</h3>
  <br>

  <table class="table table">
    <thead>
      <tr>
        <th>标题</th>
        <th>作者</th>
        <th>发布时间</th>
      </tr>
    </thead>
    <tbody>
      <% @message_collections.each do |message_collection| %>
        <tr>
          <td><%= link_to(message_collection.title, message_path(message_collection)) %></td>
          <td><%= message_collection.user.name %></td>
          <td><%= message_collection.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

<br><br><br>

<div class="account-box">

  <h3 class="text-center">我投的动态信息</h3>
  <br>

  <table class="table table">
    <thead>
      <tr>
        <th>标题</th>
        <th>作者</th>
        <th>发布时间</th>
        <th>状态</th>
      </tr>
    </thead>
    <tbody>
      <% @user_messages.each do |user_message| %>
        <tr>
          <td><%= link_to(user_message.title, message_path(user_message)) %></td>
          <td><%= user_message.user.name %></td>
          <td><%= user_message.created_at %></td>
          <% if user_message.is_hidden? %>
            <td>审核中</td>
          <% else %>
            <td>已发布</td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
