<div class="container">
  <div class="row">
    <%= @introductions.each do |introduction| %>
      <div class="col-xs-12 col-md-4">
        <%= link_to introduction_path(introduction) %>
          <% if introduction.image.present? %>
            <%= link_to image_tag(introduction.image.url, class: "img-responsive center-block"), introduction_path(introduction) %>
          <% else %>
            <%= link_to image_tag("http://placehold.it/200x200&text=No Pic", class: "img-responsive center-block"), introduction_path(introduction) %>
          <% end %>
      </div>
    <% end %>
  </div>
</div>
