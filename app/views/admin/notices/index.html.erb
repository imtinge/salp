<div class="container">
  <div class="row">
    <div class="">
      <h3 class="text-center">通知公告列表</h3>
    </div>
    <br>
    <div>
      <%= link_to("增加文章", new_admin_notice_path, class: "btn btn-sm btn-default pull-right") %>
    </div>

    <table class="table table-hover table-bordered table-responsive">
      <thead>
        <tr>
          <td>标题</td>
          <td>发布时间</td>
          <td>操作</td>
        </tr>
      </thead>
      <tbody>
        <% @notices.each do |notice| %>
          <tr>
            <td><%= link_to(notice.title, notice_path(notice))  %></td>

            <td><%= notice.created_at %></td>
            <td>
              <%= link_to("Edit", edit_admin_notice_path(notice)) %> |
              <%= link_to("Destroy", admin_notice_path(notice), method: :delete, data: { confirm: "你确定要删除吗？"}) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
