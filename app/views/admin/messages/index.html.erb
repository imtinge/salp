<div class="container">
  <div class="row">
    <br><br><br>
    <div class="col-md-10">
      <h3 class="text-center">动态列表</h3>
    </div>
    <br>
    <div class="col-md-10">
      <div>
        <%= link_to("增加动态", new_admin_message_path, class: "btn btn-sm btn-default pull-right") %>
      </div>

      <table class="table table-hover table-bordered table-responsive">
        <thead>
          <tr>
            <td>标题</td>
            <td>发布时间</td>
            <td>操作</td>
          </tr>
        </thead>
        <tbody>
          <% @messages.each do |message| %>
            <tr>
              <td><%= link_to(message.title, message_path(message))  %></td>

              <td><%= message.created_at %></td>
              <td>
                <%= link_to("Edit", edit_admin_message_path(message)) %> |
                <%= link_to("Destroy", admin_message_path(message), method: :delete, data: { confirm: "你确定要删除吗？"}) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
